
@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@{
}
<!-- ============================================== HEADER ============================================== -->
<header class="header-style-1">
    <!-- ============================================== TOP MENU ============================================== -->
    @if (Context.Session.GetString("user") != null)
    {
        string a = Context.Session.GetString("user");
        Common.Model.UserModel user = JsonConvert.DeserializeObject<Common.Model.UserModel>(a);
        <div class="top-bar animate-dropdown">
            <div class="container">
                <div class="header-top-inner">
                    <div class="cnt-account">
                        <ul class="list-unstyled">
                            <li><a href="#"><i class="icon fa fa-heart"></i>Hi: @user.UserName</a></li>
                            <li><a asp-action="Index" asp-controller="Cart"><i class="icon fa fa-shopping-cart"></i>Cart</a></li>
                            <li><a asp-action="Logout" asp-controller="Account" asp-area="Admin"><i class="icon fa fa-lock"></i>Log Out</a></li>
                        </ul>
                    </div>
                    <!-- /.cnt-cart -->
                    <div class="clearfix"></div>
                </div>
                <!-- /.header-top-inner -->
            </div>
            <!-- /.container -->
        </div>
    }
    else
    {
        <div class="top-bar animate-dropdown">
            <div class="container">
                <div class="header-top-inner">
                    <div class="cnt-account">
                        <ul class="list-unstyled">
                            <li><a asp-action="Index" asp-controller="Cart"><i class="icon fa fa-shopping-cart"></i>Cart</a></li>
                            <li><a asp-action="Logout" asp-controller="Account" asp-area="Admin"><i class="icon fa fa-lock"></i>Login</a></li>
                        </ul>
                    </div>
                    <!-- /.cnt-cart -->
                    <div class="clearfix"></div>
                </div>
                <!-- /.header-top-inner -->
            </div>
            <!-- /.container -->
        </div>
    }
    <!-- /.header-top -->
    <!-- ============================================== TOP MENU : END ============================================== -->
    <div class="main-header">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-3 logo-holder">
                    <!-- ============================================================= LOGO ============================================================= -->
                    <div class="logo"> <a asp-action="index" asp-controller="home"> <img src="~/assets/images/logo.png" alt="logo"> </a> </div>
                    <!-- /.logo -->
                    <!-- ============================================================= LOGO : END ============================================================= -->
                </div>
                <!-- /.logo-holder -->

                <div class="col-xs-12 col-sm-12 col-md-7 top-search-holder">
                    <!-- /.contact-row -->
                    <!-- ============================================================= SEARCH AREA ============================================================= -->
                    <div class="search-area">
                        @using (Html.BeginForm("Search", "Product", FormMethod.Get))
                        {
                            <form>
                                <div class="control-group">
                                    <ul class="categories-filter animate-dropdown">
                                        <li class="dropdown">
                                            <a class="dropdown-toggle" data-toggle="dropdown" href="category.html">All <b class="caret"></b></a>
                                            <ul class="dropdown-menu" role="menu">
                                            </ul>
                                        </li>
                                    </ul>
                                    <input name="Search" aria-label="Search" type="search" class="search-field" placeholder="Nhập từ khóa sản phẩm cần tìm...">
                                    <button class="search-button" type="submit">
                                    </button>
                                </div>
                            </form>
                        }
                    </div>
                    <!-- /.search-area -->
                    <!-- ============================================================= SEARCH AREA : END ============================================================= -->
                </div>
                <!-- /.top-search-holder -->
                @await Component.InvokeAsync("SmallCart")

                <!-- /.top-cart-row -->
            </div>
            <!-- /.row -->

        </div>
        <!-- /.container -->

    </div>
    <!-- /.main-header -->
