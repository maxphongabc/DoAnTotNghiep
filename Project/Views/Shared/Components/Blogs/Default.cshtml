@model IEnumerable<Common.Model.Category_PostModel>
    <div class="sidebar-widget outer-bottom-xs wow fadeInUp animated" style="visibility: visible; animation-name: fadeInUp;">
        <h3 class="section-title">Danh mục tin</h3>
        <div class="sidebar-widget-body m-t-10">
            <div class="accordion">
                <div class="accordion-group">
                    <div class="accordion-heading">
                    @foreach(var item in Model) {
                        <a asp-action="BlogByCate" asp-controller="Blog" asp-route-slug="@item.Slug" class="accordion-toggle collapsed">
                            @item.Name
                        </a>
                    }
                    </div><!-- /.accordion-heading -->                 
            </div><!-- /.accordion -->
        </div><!-- /.sidebar-widget-body -->
    </div>
</div>