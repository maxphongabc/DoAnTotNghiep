@model Common.ViewModel.UserViewModel
@{ 
    ViewData["Title"] = "Tài khoản của tôi";
}
<div class="sign-in-page">
    <div class="row">
        <!-- Sign-in -->
        <div class="col-md-6 col-sm-6 sign-in">
            <h4 class="">Thông tin tài khoản</h4>
            <form class="register-form outer-top-xs" role="form">
                <div class="form-group">
                    <img src="~/img/user/@Model.UserImage" />
                </div>
                <div class="form-group">
                    <label class="info-title" for="exampleInputEmail1">Họ và tên <span>*</span></label>
                    <div>@Model.FullName</div>
                </div>
                <div class="form-group">
                    <label class="info-title" for="exampleInputEmail1">Email <span>*</span></label>
                    <div>@Model.Email</div>
                </div>
                <div class="form-group">
                    <label class="info-title" for="exampleInputEmail1">Tài khoản <span>*</span></label>
                    <div>@Model.UserName</div>
                </div>
                <div class="form-group">
                    <label class="info-title" for="exampleInputPassword1">SĐT <span>*</span></label>
                    <div>@Model.Phone</div>
                </div>
                <div class="form-group">
                    <label class="info-title" for="exampleInputPassword1">Địa chỉ <span>*</span></label>
                    <div>@Model.Address</div>
                </div>
            </form>
            <a asp-action="DMK" asp-controller="User" class="btn btn-warning">Đổi mật khẩu</a>
            <span></span>
            <a asp-action="Editmember" asp-controller="User" class="btn btn-success">Thay đổi thông tin cá nhân</a>
        </div>
    </div><!-- /.row -->
</div>