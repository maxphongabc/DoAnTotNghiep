@model Project.Models.RegisterViewModel

@{
    <title>Register</title>
    Layout = "~/Areas/Admin/Views/Shared/_layoutlogin.cshtml";
}

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
            <form asp-controller="Home" asp-action="Register" method="post" onsubmit="return validate()" class="login100-form validate-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <span class="login100-form-title p-b-49" style="font-family:Arial">
                    Đăng Ký
                </span>
                <div class="wrap-input100 validate-input m-b-23" data-validate="Tên của bạn không hợp lệ!">
                    <span class="label-input100">Họ Tên</span>
                    <input asp-for="FullName" class="input100" type="text" placeholder="Nhập Họ Tên">
                    <span asp-validation-for="FullName" class="focus-input100" data-symbol="&#xf206;"></span>
                </div>
                <div class="wrap-input100 validate-input m-b-23" data-validate="Địa chỉ của bạn không hợp lệ!">
                    <span class="label-input100">Địa Chỉ</span>
                    <input asp-for="Address" class="input100" type="text" placeholder="Nhập Địa Chỉ">
                    <span asp-validation-for="Address" class="focus-input100" data-symbol="&#xf206;"></span>
                </div>
                <div class="wrap-input100 validate-input m-b-23" data-validate="Số Điện Thoại của bạn không hợp lệ!">
                    <span class="label-input100">Số Điện Thoại</span>
                    <input asp-for="Phone" class="input100" type="number" id="phone11111" placeholder="Nhập Số Điện Thoại">
                    <span class="focus-input100" data-symbol="&#xf206;"></span>
                </div>
                <span asp-validation-for="Phone" style="color:red"></span>
                <div id="error" style="color:red"></div>
                <div class="wrap-input100 validate-input m-b-23" data-validate="Email của bạn không hợp lệ!">
                    <span class="label-input100">Email</span>
                    <input asp-for="Email" class="input100" type="email" placeholder="Nhập Email">
                    <span asp-validation-for="Email" class="focus-input100" data-symbol="&#xf206;"></span>
                </div>

                <div class="wrap-input100 validate-input m-b-23" data-validate="Tài khoản của bạn không hợp lệ!">
                    <span class="label-input100">Tài Khoản</span>
                    <input asp-for="UserName" class="input100" type="text" placeholder="Nhập Tài Khoản">
                    <span asp-validation-for="UserName" class="focus-input100" data-symbol="&#xf206;"></span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Mật khẩu của bạn không hợp lệ!">
                    <span class="label-input100">Mật Khẩu</span>
                    <input asp-for="PassWord" class="input100" type="password" placeholder="Nhập Mật Khẩu">
                    <span asp-validation-for="PassWord" class="focus-input100" data-symbol="&#xf190;"></span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Mật khẩu của bạn không hợp lệ!">
                    <span class="label-input100">Nhập Lại Mật Khẩu</span>
                    <input asp-for="ConfirmPassword" class="input100" type="password" placeholder="Nhập Lại Mật Khẩu">
                    <span asp-validation-for="ConfirmPassword" class="focus-input100" data-symbol="&#xf190;"></span>
                </div>
                <div class="text-right p-t-8 p-b-31">

                </div>
                <div class="container-login100-form-btn">
                    <div class="wrap-login100-form-btn">
                        <div class="login100-form-bgbtn"></div>
                        <button class="login100-form-btn">
                            Đăng Ký
                        </button>
                    </div>
                </div>
                <div class="txt1 text-center p-t-54 p-b-20">
                    <span>
                        Hoặc Đăng Ký
                    </span>
                </div>
                <div class="flex-c-m">
                    <a href="#" class="login100-social-item bg1">
                        <i class="fa fa-facebook"></i>
                    </a>
                    <a href="#" class="login100-social-item bg2">
                        <i class="fa fa-twitter"></i>
                    </a>
                    <a href="#" class="login100-social-item bg3">
                        <i class="fa fa-google"></i>
                    </a>
                </div>
                <div class="flex-c-m">
                    <a asp-controller="Home" asp-action="Login" class="txt2">
                        Đăng Nhập
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
