@model Common.Model.OrderModel
@{
    ViewData["Title"] = "Đơn hàng của tôi";
    List<Common.Model.Order_DetailsModel> order_details = ViewBag.CTHD;
}
<div class="row">
    <div class="shopping-cart">
        <div class="shopping-cart-table ">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <td>STT</td>
                            <th>Hình ảnh</th>
                            <th>Sản phẩm</th>
                            <th>Giá</th>
                            <th>Số lượng</th>

                        </tr>
                    </thead><!-- /thead -->
                    <tbody>
                        @if (order_details != null && order_details.Count() > 0)
                        {
                            int i = 1;
                            @foreach (var item in order_details)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td class="cart-image">
                                        <a class="entry-thumbnail">
                                            <img src="~/img/sanpham/@item.product.Image" alt="">
                                        </a>
                                    </td>
                                    <td>@item.product.Name</td>
                                    <td>@item.Price.ToString("N0") VNĐ</td>
                                    <td>@item.Quantity</td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody><!-- /tbody -->
                </table><!-- /table -->
            </div>
        </div><!-- /.shopping-cart-table -->
    </div>


</div><!-- /.row -->
<div class="col-md-4 col-sm-12 estimate-ship-tax">
    <table class="table">
        <thead>
            <tr>
                <th>
                    <span class="estimate-title">Địa chỉ người nhận</span>
                </th>
            </tr>
        </thead><!-- /thead -->
        <tbody>
            <tr>
                <td>
                    <div class="form-group">
                        <label class="info-title control-label">Người nhận: <span>@Model.user.FullName</span></label>
                    </div>
                    <div class="form-group">
                        <label class="info-title control-label">Địa chỉ: <span>@Model.ShipAdress</span></label>
                    </div>
                    <div class="form-group">
                        <label class="info-title control-label">SĐT: <span>@Model.ShipPhone</span></label>
                        <span></span>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>
<div class="col-md-4 col-sm-12 estimate-ship-tax">
    <table class="table">
        <thead>
            <tr>
                <th>
                    <span class="estimate-title">Hình thức thanh toán</span>
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <div class="form-group">
                        @Model.ShipName
                    </div>      
                    <div>
                        <label>Ngày nhận hàng: <span>@Model.ShipDateOn</span></label>
                    </div>
                </td>
            </tr>
        </tbody><!-- /tbody -->
    </table><!-- /table -->
</div>
<div class="col-md-4 col-sm-12 cart-shopping-total">
    <table class="table">
        <thead>
            <tr>
                <th>                 
                    <div class="cart-grand-total">
                        Tổng tiền:<span class="inner-left-md">@Model.Total.ToString("N0") VNĐ</span>
                    </div>
                </th>
            </tr>
        </thead><!-- /thead -->
        <tbody>
            <tr>
                <td>
                    <div class="cart-checkout-btn pull-right">
                    </div>
                </td>
            </tr>
        </tbody><!-- /tbody -->
    </table><!-- /table -->
</div>

