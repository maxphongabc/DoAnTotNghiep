@model IEnumerable<Common.ViewModel.OrderViewModel>
@{
    ViewData["Title"] = "Đơn hàng của tôi";
}
@if (Model != null)
{
    <div class="row">
        <div class="shopping-cart">
            <div class="shopping-cart-table ">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Hình ảnh</th>
                                <th>Sản phẩm</th>
                                <th>Giá</th>
                                <th>Số lượng</th>
                            </tr>
                        </thead><!-- /thead -->
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td class="cart-image">
                                    <a class="entry-thumbnail">
                                        <img src="~/img/sanpham/@item.ProductImage" alt="">
                                    </a>
                                </td>
                                <td>@item.ProductName</td>
                                <td>@item.Price.ToString("N0") VNĐ</td>
                                <td>@item.Quantity</td>
                            </tr>
                            }
                        </tbody><!-- /tbody -->
                    </table><!-- /table -->
                </div>
            </div><!-- /.shopping-cart-table -->
        </div>
    
    </div><!-- /.row -->
}


