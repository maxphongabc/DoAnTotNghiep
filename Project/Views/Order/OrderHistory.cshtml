@model IEnumerable<Common.ViewModel.OrderViewModel>
@{ 
    ViewData["Title"] = "Đơn hàng của tôi";
}
@if(Model!=null)
{ 
<div class="track-order-page">
    <div class="row">
        <div class="shopping-cart">
            <div class="shopping-cart-table ">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Mã đơn hàng</th>
                                <th>Tổng tiền</th>
                                <th>Ngày mua</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead><!-- /thead -->
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td><a asp-action="orderDetailsHistory" asp-controller="Order" asp-route-id="@item.OrderId">@item.OrderId</a></td>
                                <td>@item.Total.ToString("N0") VNĐ</td>
                                <td>@item.CreatedOn</td>
                                @if (item.StatusOrder == true)
                                {
                                    <td>Đã duyệt</td>
}
                                @if (item.StatusOrder == false)
                                {
                                    <td>Chưa duyệt</td>
}
                            </tr>
                            }
                            </tbody><!-- /tbody -->
                    </table><!-- /table -->
                </div>
            </div><!-- /.shopping-cart-table -->				
        </div>
    </div><!-- /.row -->
</div>
}