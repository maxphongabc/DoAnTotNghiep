@model List<Project.Models.Cart>
@{
    ViewData["Title"] = "Giỏ Hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>GIỎ HÀNG</h2>
<div class="col-xs-12 col-sm-12 col-md-9 homebanner-holder">
    @if (Model.Count > 0)
    {
        float total = 0;
        int stt = 1;
        float thanhtien = 0;
        <table class="table">
            <tr>
                <th>STT</th>
                <th>Sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
                <th></th>
            </tr>
            @foreach (var cartitem in Model)
            {
                thanhtien = cartitem.Quanlity * cartitem.Product.Price;
                total += thanhtien;
                <tr>
                    <td>@(stt++)</td>
                    <td>@cartitem.Product.Name</td>
                    <td>@(cartitem.Product.Price.ToString("n0"))</td>
                    <td><input asp-for="@cartitem.Quanlity" max="@cartitem.Product.Quantity" min="1" id="@($"quantity-{cartitem.Product.Id}")" /></td>
                    <td>@(thanhtien.ToString("n0"))</td>
                    <td>
                        <button class="btn btn-success updatecartitem"
                                data-productid="@cartitem.Product.Id">
                            Cập nhật
                        </button>
                        <a asp-route="removecart" asp-route-productid="@cartitem.Product.Id"
                           class="btn btn-danger">Xóa</a>
                    </td>
                </tr>
            }
            <tr>
                <td colspan="4" class="text-right">Tổng tiền</td>
                <td>@(total.ToString("n0"))</td>
                <td></td>
            </tr>
        </table>
        <a class="btn btn-success" asp-controller="Cart" asp-action="CheckOut">Check Out</a>
    }
    else
    {
<p class="alert alert-danger">Your Cart is empty</p>
    }
</div>
<br />
<div class="clearfix"></div>
<div class="shopping-cart-btn">
    <span class="">
        <a href="#" class="btn btn-upper btn-primary outer-left-xs">Continue Shopping</a>
    </span>
</div>





    @section Scripts {
        <script>
          $(document).ready(function () {
              $(".updatecartitem").click(function (event) {
                  event.preventDefault();
                  var productid = $(this).attr("data-productid");
                  var quantity = $("#quantity-" + productid).val();
                  $.ajax({
                      type: "POST",
                      url:"@Url.RouteUrl("updatecart")",
                      data: {
                          productid: productid,
                          quantity:quantity
                      },
                      success: function (result) {
                          window.location.href = "@Url.RouteUrl("cart")";
                      }
                  });
              });
          });
        </script>
    }