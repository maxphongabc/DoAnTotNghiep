@model Common.Model.FeedBackModel

@{
    ViewData["Title"] = "Details";
}

<h2>Chi tiết</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên
        </dt>
        <dd>
            @Model.Name
        </dd>
        <dt>
            Email
        </dt>
        <dd>
            @Model.Email
        </dd>
        <dt>
            Nội dung
        </dt>
        <dd>
            @Model.Content
        </dd>
        <dt>
            Trạng thái
        </dt>
        @if (Model.Status == true)
        {
            <dd class="col-sm-10">
                Đã xem
            </dd>
        }
        @if (Model.Status == false)
        {
            <dd class="col-sm-10">
                Chưa xem
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Chỉnh sửa</a> |
    <a asp-action="Index">Quay trở lại</a>
</div>
