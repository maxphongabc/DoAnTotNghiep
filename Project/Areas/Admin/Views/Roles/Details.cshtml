@model Common.Model.RolesModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>RolesModel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên
        </dt>
        <dd>
            @Model.Name
        </dd>
        <dt>
            Trạng thái
        </dt>
        @if (Model.Status == true)
        {
            <dd class="col-sm-10">
                đang hoạt động
            </dd>
        }
        @if (Model.Status == false)
        {
            <dd class="col-sm-10">
                Hết
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Chỉnh sửa</a> |
    <a asp-action="Index">Quay trở lại</a>
</div>
