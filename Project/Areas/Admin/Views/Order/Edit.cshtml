<div class="modal-header">
    <h3 class="modal-title">Chỉnh sửa trạng thái đơn hàng</h3>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body" >
    <div class="card">
        <div class="card-body">
            <h4>Thông tin đơn hàng #@Model.Id</h4>
            <div class="table-responsive">
                <table class="product-info-table m-t-20">
                    <tbody>
                        <tr>
                            <td>ID:</td>
                            <td class="text-dark font-weight-bold">#@Model.Id</td>
                        </tr>
                        <tr>
                            <td>Ngày mua:</td>
                            <td>@Model.CreatedOn</td>
                        </tr>
                        <tr>
                            <td>Người mua:</td>
                            <td>@Model.user.UserName</td>
                        </tr>
                        <tr>
                            <td>Số điện thoại:</td>
                            <td>@Model.ShipPhone</td>
                        </tr>
                        <tr>
                            <td>Địa chỉ:</td>
                            <td>@Model.ShipAdress</td>
                        </tr>
                        <tr>
                            <td>Hình thức nhận hàng:</td>
                            <td>@Model.ShipName</td>
                        </tr>
                        <tr>
                            <td>Ghi chú:</td>
                            <td>@Model.Description</td>
                        </tr>
                        <tr>
                            <td>Tổng tiền:</td>
                            <td>@Model.Total.ToString("N0") VNĐ</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
