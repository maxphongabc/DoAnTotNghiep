@model Common.Model.Order_DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Chi tiết</h1>
MãPhong Td
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Mã hóa đơn
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderId)
        </dd>
        <dt class = "col-sm-2">
           Số lượng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
           Giá
        </dt>
        <dd class = "col-sm-10">
            @Model.Price.ToString("N0") VNĐ
        </dd>
        <dt class = "col-sm-2">
            Ngày tạo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>
        <dt class = "col-sm-2">
            Mã sản phẩm
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.product.Id)
        </dd>
        <dt class = "col-sm-2">
            Trạng thái
        </dt>
        @if(Model.Status==true)
        { 
        <dd class = "col-sm-10">
